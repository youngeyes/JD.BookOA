<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>欢迎登录网上书店后台管理系统</title>
    <link href="~/css/adminstyle.css" rel="stylesheet" type="text/css" />
    <script language="JavaScript" src="~/js/jquery.js"></script>
    <script src="~/Content/js/md5.js"></script>
    <script language="javascript">
        $(function () {
            $('.loginbox').css({ 'position': 'absolute', 'left': ($(window).width() - 692) / 2 });
            $(window).resize(function () {
                $('.loginbox').css({ 'position': 'absolute', 'left': ($(window).width() - 692) / 2 });
            })
        });
        function CheckLogin() {
            var pass = hex_md5($("#UserPwd").val());
            $("#UserPwd").val(pass);
            $.post("/Login/CheckLogin", { "UserId": $("#UserId").val(), "UserPwd": pass }, function (data) {
                if (data == "ok") {
                    window.location = '/Admin/Index'
                }
                if (data == "null") {
                    alert("密码和账号不能为空")
                }
                if (data == "error") {

                    alert("数据写入错误")
                }
                if (data == "no") {
                    alert("密码或者账号错误")
                }

            });

        }
    </script>

</head>

<body style="background-color:#1c77ac; background-image:url(/images/light.png); background-repeat:no-repeat; background-position:center top; overflow:hidden;">



    <div id="mainBody">
        <div id="cloud1" class="cloud"></div>
        <div id="cloud2" class="cloud"></div>
    </div>


    <div class="logintop">
        <span>欢迎登录网上书店后台管理界面平台</span>
        <ul>
            <li><a href="#">回首页</a></li>
            <li><a href="#">帮助</a></li>
            <li><a href="#">关于</a></li>
        </ul>
    </div>

    <div class="loginbody">

        <span class="systemlogo"></span>

        <div class="loginbox">

            <ul>
                <li><input type="text" class="loginuser" value="" id="UserId" onclick="JavaScript:this.value=''" /></li>
                <li><input type="password" class="loginpwd" value="" id="UserPwd" onclick="JavaScript:this.value=''" /></li>
                <li><input type="button" class="loginbtn" value="登录" onclick="CheckLogin()" /></li>
            </ul>


        </div>

    </div>

    <div class="loginbm">版权所有  2017  <a href="http://www.uimaker.com"></a>江南大学毕业设计</div>


</body>

</html>
