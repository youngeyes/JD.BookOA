@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Content/themes/icon.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.easyui.min.js"></script>
    <script src="~/Scripts/easyui-lang-zh_CN.js"></script>
    <script src="~/Scripts/datapattern.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Content/js/md5.js"></script>
    <!--<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>-->

    <script type="text/javascript">
        $(function () {

            loadData();
        });
        //主界面搭建
        function loadData(pars) {
            $('#tt').datagrid({
                url: '/Admin/LoadMenunav',//获取数据
                title: '导航菜单管理',
                width: $(window).width() - 20,
                //autoRowHeight: false,
                //pageSize: 50,
                //remoteSort:true,
                height: $(window).height() - 20,
                fitColumns: true, //列自适应
                nowrap: false,
                idField: 'Id',//主键列的列明
                loadMsg: '正在加获取信息请稍后...',
                pagination: true,//是否有分页
                singleSelect: false,//是否单行选择
                pageSize: 100,//页大小，一页多少条数据
                pageNumber: 1,//当前页，默认的
                pageList: [100, 150, 200],
                queryParams: pars,//往后台传递参数
                columns: [[
                    { field: 'ck', checkbox: true, align: 'left', width: 50 },
					{ field: 'Id', title: '编号', width: 50 },
					{ field: 'PName', title: '菜单名称', width: 100 },
					

                ]],
                toolbar: [ {
                    id: 'btnEdit',
                    text: '编辑',
                    iconCls: 'icon-edit',
                    handler: function () {

                        editInfo();
                    }


                }, {
                    id: 'btnsearch',
                    text: '搜索',
                    iconCls: 'icon-search',
                    handler: function () {

                        searchInfo();
                    }


                }, {
                    id: 'btnsearch',
                    text: '刷新',
                    iconCls: 'icon-reload',
                    handler: function () {
                        //传值
                        var pars = {
                            iccbn: "",
                            name: "",
                            classname: "",
                            writer: "",

                        };

                        loadData(pars)
                        //loadData();
                        //searchInfo();
                    }


                },

                ],
            });
        }


        //编辑用户提交信息
        function editInfo() {
            var rows = $('#tt').datagrid('getSelections');
            if (rows.length != 1) {
                $.messager.alert("message", "请选择要编辑的1条记录!", "error");
                return;
            }
            $.post("/Admin/EditMenunavLoad", { "id": rows[0].Id }, function (data) {
                if (data.msg == "ok") {
                    $("#edUserIdH").val(data.sdata.Id);
                    $("#PName").val(data.sdata.PName);
                    $("#editDiv").css("display", "block");
                    $("#editDiv").css("display", "block");//隐藏DIV，此时可见度为none，
                    $('#editDiv').dialog({
                        title: '编辑用户',
                        // width: 230,
                        modal: true,
                        buttons: [{
                            text: '确定',
                            iconCls: 'icon-ok',
                            handler: function () {
                                
                                $("#editFrom").submit();//提交表单

                            }

                        }, {
                            text: '取消',
                            handler: function () {

                                $('#editDiv').dialog('close');

                            }
                        }]
                    });

                } else {
                    alert("数据不存在或未知数据！");
                }
            });

        }

        //编辑返回信息
        function afterEdit(data) {

            if (data == "ok") {
                // $("editFrom input").val("");//异步回到
                $('#editDiv').dialog('close');
                $('#tt').datagrid('reload');
                return;
            }
            else {
                alert(data)
            }
        }
        //用户搜索
        function searchInfo() {
            $("#searchDiv").css("display", "block");//隐藏DIV，此时可见度为none，
            $('#searchDiv').dialog({
                title: '多条件搜索',
                modal: true,
                buttons: [{
                    text: '确定',

                    iconCls: 'icon-ok',
                    handler: function () {

                        //传值
                        var pars = {
                            PName: $("#pars_PName").val(),
                        };
                        loadData(pars)
                        $('#searchDiv').dialog('close');

                    }

                }, {
                    text: '取消',
                    handler: function () {

                        $('#searchDiv').dialog('close');

                    }
                }]
            });
        }
        //添加用户信息

    </script>


</head>
<body>
    <div>

        <table id="tt" style="width: 700px;" title="标题" iconcls="icon-edit"></table>
    </div>
    <!--修改用户信息DIV--->
    <div id="editDiv" style="display:none">

        @using (Ajax.BeginForm("EditMenunav", "Admin", new { }, new AjaxOptions() { HttpMethod = "post", OnSuccess = "afterEdit" }, new { id = "editFrom" }))
        {
            <input type="hidden" name="Id" id="edUserIdH" />

            <table>

                <tr>
                    <td>菜单名称</td>
                    <td>
                        <input type="text" name="PName" id="PName" />
                    </td>
                </tr>
            </table>



        }
    </div>

    <!--搜索用户信息DIV--->
    <div id="searchDiv" style="display:none">

        <table>

            <tr>
                <td>菜单名称</td>
                <td>
                    <input type="text" name="PName" id="pars_PName" />
                </td>
            </tr>
            
        </table>



    </div>

</body>
</html>
