@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Content/themes/icon.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.easyui.min.js"></script>
    <script src="~/Scripts/easyui-lang-zh_CN.js"></script>
    <script src="~/Scripts/datapattern.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Content/js/md5.js"></script>
    <!--<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>-->

    <script type="text/javascript">
        $(function () {

            loadData();
        });
        //主界面搭建
        function loadData(pars) {
            $('#tt').datagrid({
                url: '/Admin/LoadMessage',//获取数据
                title: '留言信息管理',
                width: $(window).width() - 20,
                //autoRowHeight: false,
                //pageSize: 50,
                //remoteSort:true,
                height: $(window).height() - 20,
                fitColumns: true, //列自适应
                nowrap: false,
                idField: 'Id',//主键列的列明
                loadMsg: '正在加获取信息请稍后...',
                pagination: true,//是否有分页
                singleSelect: false,//是否单行选择
                pageSize: 100,//页大小，一页多少条数据
                pageNumber: 1,//当前页，默认的
                pageList: [100, 150, 200],
                queryParams: pars,//往后台传递参数
                columns: [[
                    { field: 'ck', checkbox: true, align: 'left', width: 50 },
                    { field: 'Id', title: '编号', width: 50 },
                    { field: 'OrderNum', title: '订单号', width: 100 },
                    { field: 'BuyerMsg', title: '买家留言信息', width: 100 },
                    { field: 'SellerMsg', title: '卖家回复信息', width: 100 },
                    { field: 'MemberId', title: '留言者', width: 100 },
                    {
                        field: 'Reply', title: '是否回复', width: 100,
                        formatter: function (value, row, index) {
                            if (value == false) {
                                return "未回复";
                            } if (value == true) {
                                return "已回复";
                            } 
                        }
                    },
                ]],
                toolbar: [{
                    id: 'btnEdit',
                    text: '回复',
                    iconCls: 'icon-edit',
                    handler: function () {

                        editInfo();
                    }


                }, {
                    id: 'btnsearch',
                    text: '搜索',
                    iconCls: 'icon-search',
                    handler: function () {

                        searchInfo();
                    }


                }, {
                    id: 'btnsearch',
                    text: '刷新',
                    iconCls: 'icon-reload',
                    handler: function () {
                        //传值
                        var pars = {
                            iccbn: "",
                            name: "",
                            classname: "",
                            writer: "",

                        };

                        loadData(pars)
                        //loadData();
                        //searchInfo();
                    }


                },

                ],
            });
        }


        //编辑用户提交信息
        function editInfo() {
            var rows = $('#tt').datagrid('getSelections');
            if (rows.length != 1) {
                $.messager.alert("message", "请选择要回复的留言记录!", "error");
                return;
            }
            if (rows[0].Reply==true) {
                $.messager.alert("message", "该留言记录已回复", "error");
                return;
            }
            window.location.href = "/admin/RepalyView?Id=" + rows[0].Id;
            //$.post("/Admin/SendOrdersLoad", { "Id": rows[0].Id }, function (data) {
            //    if (data.msg == "ok") {
            //        alert("派送成功");
            //        afterEdit();
            //    } else {
            //        alert("该订单已经派送");
            //    }
            //});
        }
        //用户搜索
        function searchInfo() {
            $("#searchDiv").css("display", "block");//隐藏DIV，此时可见度为none，
            $('#searchDiv').dialog({
                title: '多条件搜索',
                modal: true,
                buttons: [{
                    text: '确定',

                    iconCls: 'icon-ok',
                    handler: function () {

                        //传值
                        var pars = {
                            OrderNum: $("#pars_OrderNum").val(),
                            MemberId: $('#pars_MemberId').val(),
                            Reply: $("#adReply").val(),
                        };
                        loadData(pars)
                        $('#searchDiv').dialog('close');

                    }

                }, {
                    text: '取消',
                    handler: function () {

                        $('#searchDiv').dialog('close');

                    }
                }]
            });
        }

        //删除返回信息
        function aftersearch(data) {

            if (data.msg = "ok") {
                loadData()
            }
            else {
                alert("查询失败");
            }
        }
    </script>


</head>
<body>
    <div>

        <table id="tt" style="width: 700px;" title="标题" iconcls="icon-edit"></table>
    </div>
    <!--搜索用户信息DIV--->
    <div id="searchDiv" style="display:none">

        <table>

            <tr>
                <td>订单编号</td>
                <td>
                    <input type="text" name="OrderNum" id="pars_OrderNum" />
                </td>
            </tr>
            <tr>
                <td>留言人</td>
                <td>
                    <input type="text" name="MemberId" id="pars_MemberId" />
                </td>
            </tr>
            <tr>
                <td>回复状态</td>
                <td>
                    <select name="Reply" id="adReply">
                        <option value=""></option>
                        <option value="false">未回复</option>
                        <option value="true">已回复</option>
                    </select>

                </td>
            </tr>
        </table>



    </div>

</body>
</html>
